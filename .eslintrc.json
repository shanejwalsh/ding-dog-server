{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["warn", 4],
        "arrow-parens": ["error", "as-needed"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}